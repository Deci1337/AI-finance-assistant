<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullStackAppTest.MainPage">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Ввод числа A -->
        <Entry x:Name="EntryA"
               Keyboard="Numeric"
               Placeholder="Введите число A" />

        <!-- Ввод числа B -->
        <Entry x:Name="EntryB"
               Keyboard="Numeric"
               Placeholder="Введите число B" />

        <!-- Кнопка вызова Python backend -->
        <Button Text="Посчитать сумму"
                Clicked="OnSumClicked" />

        <!-- Вывод результата -->
        <Label x:Name="ResultLabel"
               Text="Результат появится здесь"
               FontSize="18"
               TextColor="Blue" />

    </VerticalStackLayout>

</ContentPage>
