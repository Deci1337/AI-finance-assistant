<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.Pages.ProfilePage"
             BackgroundColor="{DynamicResource BackgroundDark}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,20,20,20" ColumnDefinitions="Auto,*">
            <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    HeightRequest="40"
                    WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped"/>
                </Border.GestureRecognizers>
                <Label Text="&lt;"
                       TextColor="{DynamicResource TextPrimary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <Label Grid.Column="1"
                   Text="Профиль"
                   TextColor="{DynamicResource TextPrimary}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="-40,0,0,0"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" BackgroundColor="{DynamicResource BackgroundDark}">
            <VerticalStackLayout Spacing="20" Padding="20,10" BackgroundColor="{DynamicResource BackgroundDark}">
                
                <!-- Avatar -->
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Border BackgroundColor="{StaticResource Primary}"
                            StrokeShape="RoundRectangle 50"
                            Stroke="Transparent"
                            HeightRequest="100"
                            WidthRequest="100"
                            HorizontalOptions="Center">
                        <Label x:Name="AvatarLabel"
                               Text="U"
                               TextColor="{DynamicResource BackgroundDark}"
                               FontSize="40"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label x:Name="UserNameDisplay"
                           Text="User"
                           TextColor="{DynamicResource TextPrimary}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Friendliness Card -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Ваша дружелюбность"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        
                        <!-- Friendliness Labels -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Text="Злой"
                                   TextColor="#FF6B6B"
                                   FontSize="12"
                                   FontAttributes="Bold"/>
                            <Label x:Name="FriendlinessValueLabel"
                                   Grid.Column="1"
                                   Text="Нейтрально"
                                   TextColor="{DynamicResource TextPrimary}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="Добрый"
                                   Grid.Column="2"
                                   TextColor="#00D09E"
                                   FontSize="12"
                                   FontAttributes="Bold"/>
                        </Grid>
                        
                        <!-- Friendliness Progress Bar -->
                        <Grid HeightRequest="12">
                            <!-- Background gradient bar -->
                            <Border StrokeShape="RoundRectangle 6"
                                    Stroke="Transparent">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF6B6B" Offset="0.0"/>
                                        <GradientStop Color="#FFE66D" Offset="0.5"/>
                                        <GradientStop Color="#00D09E" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- Indicator -->
                            <Border x:Name="FriendlinessIndicator"
                                    BackgroundColor="White"
                                    StrokeShape="RoundRectangle 8"
                                    Stroke="#333333"
                                    StrokeThickness="2"
                                    HeightRequest="16"
                                    WidthRequest="16"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"
                                    Margin="0,0,0,0">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.3"/>
                                </Border.Shadow>
                            </Border>
                        </Grid>
                        
                        <!-- Messages analyzed -->
                        <Label x:Name="MessagesAnalyzedLabel"
                               Text="На основе 0 сообщений"
                               TextColor="{DynamicResource TextMuted}"
                               FontSize="11"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Nickname Input -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Никнейм"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        <Entry x:Name="NicknameEntry"
                               Placeholder="Введите ваш никнейм"
                               PlaceholderColor="{DynamicResource TextMuted}"
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="16"
                               BackgroundColor="Transparent"
                               TextChanged="OnNicknameChanged"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Total Stats Cards -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <!-- Total Earned -->
                    <Border BackgroundColor="{DynamicResource BackgroundCard}"
                            StrokeShape="RoundRectangle 20"
                            Stroke="Transparent"
                            Padding="20">
                        <VerticalStackLayout Spacing="8">
                            <Border BackgroundColor="{StaticResource AccentGreen}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Opacity="0.2"
                                    HorizontalOptions="Start">
                                <Label Text="^"
                                       TextColor="{StaticResource AccentGreen}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Всего получено"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="12"/>
                            <Label x:Name="TotalEarnedLabel"
                                   Text="0 RUB"
                                   TextColor="{StaticResource AccentGreen}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Total Spent -->
                    <Border Grid.Column="1"
                            BackgroundColor="{DynamicResource BackgroundCard}"
                            StrokeShape="RoundRectangle 20"
                            Stroke="Transparent"
                            Padding="20">
                        <VerticalStackLayout Spacing="8">
                            <Border BackgroundColor="{StaticResource AccentRed}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Opacity="0.2"
                                    HorizontalOptions="Start">
                                <Label Text="v"
                                       TextColor="{StaticResource AccentRed}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Всего потрачено"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="12"/>
                            <Label x:Name="TotalSpentLabel"
                                   Text="0 RUB"
                                   TextColor="{StaticResource AccentRed}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Balance Card -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <HorizontalStackLayout Spacing="15">
                        <Border BackgroundColor="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 12"
                                Stroke="Transparent"
                                HeightRequest="50"
                                WidthRequest="50"
                                Opacity="0.2">
                            <Label Text="B"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Текущий баланс"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="14"/>
                            <Label x:Name="BalanceLabel"
                                   Text="0 RUB"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="24"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

                <!-- Additional Stats -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Информация об аккаунте"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="15">
                            <VerticalStackLayout>
                                <Label x:Name="TotalTransactionsLabel"
                                       Text="0"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="24"
                                       FontAttributes="Bold"/>
                                <Label Text="Транзакций"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Column="1">
                                <Label x:Name="TotalCategoriesLabel"
                                       Text="0"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="24"
                                       FontAttributes="Bold"/>
                                <Label Text="Категорий"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Row="1" Grid.ColumnSpan="2">
                                <Label x:Name="MemberSinceLabel"
                                       Text="-"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Дата регистрации"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Save Button -->
                <Border BackgroundColor="{StaticResource Primary}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20,18">
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Primary}"
                                Offset="0,4"
                                Radius="15"
                                Opacity="0.4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSaveTapped"/>
                    </Border.GestureRecognizers>
                    <Label Text="Сохранить"
                           TextColor="{DynamicResource BackgroundDark}"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </Border>

                <!-- Achievements Section -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Достижения"
                                   TextColor="{DynamicResource TextPrimary}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label x:Name="AchievementsCountLabel"
                                   Grid.Column="1"
                                   Text="0/5"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </Grid>
                        
                        <!-- Achievements Grid -->
                        <FlexLayout x:Name="AchievementsContainer"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Start">
                            <!-- Achievements will be added dynamically -->
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Settings Button -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                                StrokeShape="RoundRectangle 12"
                                Stroke="Transparent"
                                HeightRequest="44"
                                WidthRequest="44">
                            <Label Text="G"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Настройки"
                                   TextColor="{DynamicResource TextPrimary}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Тема, данные и другое"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                        
                        <Label Grid.Column="2"
                               Text=">"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="20"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
