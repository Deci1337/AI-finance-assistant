<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.Pages.AddTransactionPage"
             BackgroundColor="{DynamicResource BackgroundDark}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,20,20,20" ColumnDefinitions="Auto,*,Auto">
            <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    HeightRequest="40"
                    WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped"/>
                </Border.GestureRecognizers>
                <Label Text="&lt;"
                       TextColor="{DynamicResource TextPrimary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <Label Grid.Column="1"
                   Text="Добавить транзакцию"
                   TextColor="{DynamicResource TextPrimary}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" BackgroundColor="{DynamicResource BackgroundDark}">
            <VerticalStackLayout Spacing="20" Padding="20,10" BackgroundColor="{DynamicResource BackgroundDark}">
                
                <!-- Transaction Type Toggle -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 15"
                        Stroke="Transparent"
                        Padding="5">
                    <Grid ColumnDefinitions="*,*">
                        <Border x:Name="ExpenseTab"
                                BackgroundColor="{StaticResource AccentRed}"
                                StrokeShape="RoundRectangle 12"
                                Stroke="Transparent"
                                Padding="15,12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnExpenseTabTapped"/>
                            </Border.GestureRecognizers>
                            <Label Text="Расход"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </Border>
                        
                        <Border x:Name="IncomeTab"
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                StrokeShape="RoundRectangle 12"
                                Stroke="Transparent"
                                Padding="15,12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnIncomeTabTapped"/>
                            </Border.GestureRecognizers>
                            <Label x:Name="IncomeTabLabel"
                                   Text="Доход"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="16"
                                   HorizontalOptions="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Amount Input -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Сумма"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label x:Name="CurrencySymbol"
                                   Text="RUB"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="24"
                                   VerticalOptions="Center"/>
                            <Entry x:Name="AmountEntry"
                                   Grid.Column="1"
                                   Placeholder="0"
                                   PlaceholderColor="{DynamicResource TextMuted}"
                                   TextColor="{DynamicResource TextPrimary}"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   HorizontalOptions="Fill"
                                   Margin="10,0"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Title Input -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Название (необязательно)"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        <Entry x:Name="TitleEntry"
                               Placeholder="Введите описание..."
                               PlaceholderColor="{DynamicResource TextMuted}"
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="16"
                               BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Category Selection -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Категория"
                                   TextColor="{DynamicResource TextSecondary}"
                                   FontSize="14"/>
                            <Label Grid.Column="1"
                                   Text="+ Добавить"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAddCategoryTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                        
                        <FlexLayout x:Name="CategoriesContainer"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Start">
                            <!-- Categories will be added dynamically -->
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Importance Selection -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Важность"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        
                        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                            <Border x:Name="ImportanceLow"
                                    BackgroundColor="{DynamicResource BackgroundElevated}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    Padding="10,15">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnImportanceTapped" CommandParameter="0"/>
                                </Border.GestureRecognizers>
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Низкая"
                                           TextColor="{DynamicResource TextSecondary}"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <Border x:Name="ImportanceMedium"
                                    Grid.Column="1"
                                    BackgroundColor="{StaticResource Primary}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    Padding="10,15">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnImportanceTapped" CommandParameter="1"/>
                                </Border.GestureRecognizers>
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Средняя"
                                           TextColor="{DynamicResource BackgroundDark}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <Border x:Name="ImportanceHigh"
                                    Grid.Column="2"
                                    BackgroundColor="{DynamicResource BackgroundElevated}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    Padding="10,15">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnImportanceTapped" CommandParameter="2"/>
                                </Border.GestureRecognizers>
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Высокая"
                                           TextColor="{DynamicResource TextSecondary}"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <Border x:Name="ImportanceCritical"
                                    Grid.Column="3"
                                    BackgroundColor="{DynamicResource BackgroundElevated}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    Padding="10,15">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnImportanceTapped" CommandParameter="3"/>
                                </Border.GestureRecognizers>
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Крит."
                                           TextColor="{DynamicResource TextSecondary}"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Save Button -->
        <Border Grid.Row="2"
                BackgroundColor="{StaticResource Primary}"
                StrokeShape="RoundRectangle 20"
                Stroke="Transparent"
                Margin="20,10,20,30"
                Padding="20,18">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Primary}"
                        Offset="0,4"
                        Radius="15"
                        Opacity="0.4"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSaveTapped"/>
            </Border.GestureRecognizers>
            <Label Text="Сохранить"
                   TextColor="{DynamicResource BackgroundDark}"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Border>
    </Grid>
</ContentPage>

