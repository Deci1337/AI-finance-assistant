<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.Pages.SettingsPage"
             BackgroundColor="{DynamicResource BackgroundDark}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,50,20,20" ColumnDefinitions="Auto,*">
            <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    HeightRequest="40"
                    WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped"/>
                </Border.GestureRecognizers>
                <Label Text="&lt;"
                       TextColor="{DynamicResource TextPrimary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <Label Grid.Column="1"
                   Text="Настройки"
                   TextColor="{DynamicResource TextPrimary}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="-40,0,0,0"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20,10">
                
                <!-- Appearance Section -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Внешний вид"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        
                        <!-- Theme Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    HeightRequest="44"
                                    WidthRequest="44">
                                <Label x:Name="ThemeIcon"
                                       Text="M"
                                       TextColor="{StaticResource Primary}"
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="Тема оформления"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="16"/>
                                <Label x:Name="ThemeStatusLabel"
                                       Text="Темная тема"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <Switch x:Name="ThemeSwitch"
                                    Grid.Column="2"
                                    IsToggled="True"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="White"
                                    Toggled="OnThemeToggled"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Data Management Section -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Управление данными"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        
                        <!-- Generate Test Data -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnGenerateTestDataTapped"/>
                            </Border.GestureRecognizers>
                            
                            <Border BackgroundColor="#2D5A27"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    HeightRequest="44"
                                    WidthRequest="44">
                                <Label Text="+"
                                       TextColor="#4ADE80"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="Тестовые данные"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="16"/>
                                <Label Text="Добавить случайные транзакции"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <Border Grid.Column="2"
                                    BackgroundColor="#2D5A27"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="12,8"
                                    VerticalOptions="Center">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnGenerateTestDataTapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="Добавить"
                                       TextColor="#4ADE80"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Border>
                        </Grid>
                        
                        <BoxView HeightRequest="1" Color="{DynamicResource BackgroundElevated}"/>
                        
                        <!-- Clear Data -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border BackgroundColor="#5A2727"
                                    StrokeShape="RoundRectangle 12"
                                    Stroke="Transparent"
                                    HeightRequest="44"
                                    WidthRequest="44">
                                <Label Text="X"
                                       TextColor="#F87171"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="Очистить данные"
                                       TextColor="{DynamicResource TextPrimary}"
                                       FontSize="16"/>
                                <Label Text="Удалить все данные приложения"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <Border Grid.Column="2"
                                    BackgroundColor="#5A2727"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="12,8"
                                    VerticalOptions="Center">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnClearDataTapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="Очистить"
                                       TextColor="#F87171"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- App Info Section -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="О приложении"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        
                        <Label Text="Finance Assistant"
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        
                        <Label Text="Версия 1.0.0"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        
                        <Label Text="HSE Project 2025"
                               TextColor="{DynamicResource TextMuted}"
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="30" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

