<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.ChatPage"
             BackgroundColor="{StaticResource BackgroundDark}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        
        <!-- Header with back button and settings -->
        <Grid Grid.Row="0" Padding="20,50,20,10" ColumnDefinitions="Auto,*,Auto">
            <Border BackgroundColor="{StaticResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    HeightRequest="40"
                    WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped"/>
                </Border.GestureRecognizers>
                <Label Text="&lt;"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <Label Grid.Column="1"
                   Text="AI Ассистент"
                   TextColor="{StaticResource TextPrimary}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTitleTapped"/>
                </Label.GestureRecognizers>
            </Label>
            
            <!-- Settings button -->
            <Border Grid.Column="2"
                    BackgroundColor="{StaticResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    HeightRequest="40"
                    WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                </Border.GestureRecognizers>
                <Label Text="*"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>

        <!-- Connection status -->
        <Border Grid.Row="1"
                BackgroundColor="{StaticResource BackgroundCard}"
                Padding="15,10"
                Margin="20,0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label x:Name="ConnectionStatusLabel"
                       Text="Сервер: localhost:8000"
                       TextColor="{StaticResource TextSecondary}"
                       FontSize="12"/>
                <Label x:Name="ConnectionIndicator"
                       Text="*"
                       TextColor="{StaticResource TextMuted}"
                       FontSize="12"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Messages -->
        <ScrollView x:Name="MessagesScrollView" Grid.Row="2" Margin="0,10,0,0">
            <VerticalStackLayout x:Name="MessagesContainer" 
                                 Spacing="15" 
                                 Padding="20">
                <!-- Messages will be added dynamically -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Input Area -->
        <Border Grid.Row="3"
                BackgroundColor="{StaticResource BackgroundCard}"
                Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <Entry x:Name="MessageEntry"
                       Placeholder="Купил хлеб за 50 рублей..."
                       PlaceholderColor="{StaticResource TextSecondary}"
                       TextColor="{StaticResource TextPrimary}"
                       BackgroundColor="{StaticResource BackgroundElevated}"
                       FontSize="14"
                       Completed="OnSendMessage"/>
                
                <Button Grid.Column="1"
                        Text=">"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource BackgroundDark}"
                        FontSize="18"
                        FontAttributes="Bold"
                        WidthRequest="50"
                        Margin="10,0,0,0"
                        Clicked="OnSendMessage"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
