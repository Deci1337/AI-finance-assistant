<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.ChatPage"
             BackgroundColor="{StaticResource BackgroundDark}"
             NavigationPage.HasNavigationBar="True"
             Title="ИИ Финансовый Ассистент">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource BackgroundCard}"
                Padding="20,15">
            <Label Text="Расскажите о ваших доходах и расходах"
                   TextColor="{StaticResource TextPrimary}"
                   FontSize="16"
                   HorizontalOptions="Center"/>
        </Border>

        <!-- Messages -->
        <ScrollView x:Name="MessagesScrollView" Grid.Row="1">
            <VerticalStackLayout x:Name="MessagesContainer" 
                                 Spacing="15" 
                                 Padding="20">
                <!-- Messages will be added dynamically -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Input Area -->
        <Border Grid.Row="2"
                BackgroundColor="{StaticResource BackgroundCard}"
                Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <Entry x:Name="MessageEntry"
                       Placeholder="Например: Купил хлеб за 50 рублей и молоко за 80 рублей"
                       PlaceholderColor="{StaticResource TextSecondary}"
                       TextColor="{StaticResource TextPrimary}"
                       BackgroundColor="{StaticResource BackgroundElevated}"
                       FontSize="14"
                       Completed="OnSendMessage"/>
                
                <Button Grid.Column="1"
                        Text="Отправить"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource BackgroundDark}"
                        FontSize="14"
                        FontAttributes="Bold"
                        Padding="20,10"
                        Margin="10,0,0,0"
                        Clicked="OnSendMessage"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>

