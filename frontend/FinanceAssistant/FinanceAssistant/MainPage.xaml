<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceAssistant.MainPage"
             BackgroundColor="{DynamicResource BackgroundDark}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="{DynamicResource BackgroundDark}">
        
        <!-- Header with Profile -->
        <Grid Grid.Row="0" Padding="20,20,20,20" ColumnDefinitions="*,Auto">
            <VerticalStackLayout Spacing="4">
                <Label Text="С возвращением,"
                       TextColor="{DynamicResource TextSecondary}"
                       FontSize="14"/>
                <Label x:Name="UserNameLabel"
                       Text="Alex"
                       TextColor="{DynamicResource TextPrimary}"
                       FontSize="24"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>
            
            <!-- Profile Button -->
            <Border Grid.Column="1"
                    StrokeShape="RoundRectangle 25"
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="2"
                    HeightRequest="50"
                    WidthRequest="50"
                    BackgroundColor="{DynamicResource BackgroundCard}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnProfileTapped"/>
                </Border.GestureRecognizers>
                <Label Text="A"
                       TextColor="{StaticResource Primary}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" BackgroundColor="{DynamicResource BackgroundDark}">
            <VerticalStackLayout Spacing="20" Padding="20,0" BackgroundColor="{DynamicResource BackgroundDark}">
                
                <!-- Balance Card -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Общий баланс"
                               TextColor="{DynamicResource TextSecondary}"
                               FontSize="14"/>
                        <Label x:Name="BalanceLabel"
                               Text="125 430.50 RUB"
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="32"
                               FontAttributes="Bold"/>
                        
                        <Grid RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="10" Margin="0,10,0,0">
                            <!-- Income -->
                            <HorizontalStackLayout Spacing="8">
                                <Border BackgroundColor="{StaticResource AccentGreen}"
                                        StrokeShape="RoundRectangle 15"
                                        Stroke="Transparent"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        Opacity="0.2">
                                    <Label Text="^"
                                           TextColor="{StaticResource AccentGreen}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout>
                                    <Label Text="Доходы"
                                           TextColor="{DynamicResource TextSecondary}"
                                           FontSize="12"/>
                                    <Label x:Name="IncomeLabel"
                                           Text="+85 000"
                                           TextColor="{StaticResource AccentGreen}"
                                           FontSize="14"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            
                            <!-- Expense -->
                            <HorizontalStackLayout Grid.Row="1" Spacing="8">
                                <Border BackgroundColor="{StaticResource AccentRed}"
                                        StrokeShape="RoundRectangle 15"
                                        Stroke="Transparent"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        Opacity="0.2">
                                    <Label Text="v"
                                           TextColor="{StaticResource AccentRed}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout>
                                    <Label Text="Расходы"
                                           TextColor="{DynamicResource TextSecondary}"
                                           FontSize="12"/>
                                    <Label x:Name="ExpenseLabel"
                                           Text="-42 350"
                                           TextColor="{StaticResource AccentRed}"
                                           FontSize="14"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Chart Section -->
                <Border BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Обзор баланса"
                                   TextColor="{DynamicResource TextPrimary}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            <Border Grid.Column="1"
                                    BackgroundColor="{DynamicResource BackgroundElevated}"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="10,5">
                                <Label Text="7 дней"
                                       TextColor="{DynamicResource TextSecondary}"
                                       FontSize="12"/>
                            </Border>
                        </Grid>
                        
                        <!-- Chart -->
                        <GraphicsView x:Name="ChartView"
                                      HeightRequest="200"
                                      BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </Border>

                <!-- AI Insights Widget -->
                <Border x:Name="InsightsWidget"
                        BackgroundColor="{DynamicResource BackgroundCard}"
                        StrokeShape="RoundRectangle 20"
                        Stroke="Transparent"
                        Padding="20"
                        IsVisible="False">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout Spacing="10">
                            <Border BackgroundColor="{StaticResource Primary}"
                                    StrokeShape="RoundRectangle 15"
                                    Stroke="Transparent"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Opacity="0.2">
                                <Label Text="AI"
                                       TextColor="{StaticResource Primary}"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="AI Инсайт"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        
                        <Label x:Name="InsightText"
                               Text=""
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="14"
                               LineBreakMode="WordWrap"/>
                        
                        <!-- Analytics Section -->
                        <Border BackgroundColor="{DynamicResource BackgroundElevated}"
                                StrokeShape="RoundRectangle 15"
                                Stroke="Transparent"
                                Padding="15"
                                IsVisible="{Binding Source={x:Reference InsightsWidget}, Path=IsVisible}">
                            <VerticalStackLayout x:Name="AnalyticsContainer" Spacing="10">
                                <!-- Analytics will be added dynamically -->
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Recent Transactions -->
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Последние транзакции"
                               TextColor="{DynamicResource TextPrimary}"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1"
                               Text="Все"
                               TextColor="{StaticResource Primary}"
                               FontSize="14">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSeeAllTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                    
                    <VerticalStackLayout x:Name="TransactionsContainer" Spacing="10">
                        <!-- Transactions will be added dynamically -->
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" 
              BackgroundColor="{DynamicResource BackgroundCard}"
              Padding="20,15,20,30"
              ColumnDefinitions="*,Auto,*">
            
            <!-- Chat Button -->
            <Border Grid.Column="0"
                    BackgroundColor="{DynamicResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 25"
                    Stroke="Transparent"
                    HeightRequest="50"
                    WidthRequest="50"
                    HorizontalOptions="Center">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChatTapped"/>
                </Border.GestureRecognizers>
                <Label Text="AI"
                       TextColor="{StaticResource Secondary}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Add Transaction Button (FAB) -->
            <Border Grid.Column="1"
                    BackgroundColor="{StaticResource Primary}"
                    StrokeShape="RoundRectangle 30"
                    Stroke="Transparent"
                    HeightRequest="60"
                    WidthRequest="60"
                    HorizontalOptions="Center">
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Primary}"
                            Offset="0,4"
                            Radius="15"
                            Opacity="0.5"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddTransactionTapped"/>
                </Border.GestureRecognizers>
                <Label Text="+"
                       TextColor="{DynamicResource BackgroundDark}"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Stats/History Button -->
            <Border Grid.Column="2"
                    BackgroundColor="{DynamicResource BackgroundElevated}"
                    StrokeShape="RoundRectangle 25"
                    Stroke="Transparent"
                    HeightRequest="50"
                    WidthRequest="50"
                    HorizontalOptions="Center">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnStatsTapped"/>
                </Border.GestureRecognizers>
                <Label Text="="
                       TextColor="{DynamicResource TextSecondary}"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
